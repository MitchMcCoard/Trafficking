        <form action="/updateRecord" method="POST">
          <fieldset style="width: 200px; margin-left: auto; margin-right: auto;">
            <legend>Edit Record:</legend>
                <input type="hidden" id="id" name="id" value="<%= people[0].id %>">
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" value="<%= people[0].first_name %>">
                <br><br>
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" value="<%= people[0].last_name %>">
                <br><br>
                <label for="date_at_missing">Date Missing:</label>
                <input type="text" id="date_missing" name="date_missing" value="<%= (people[0].date_missing.getMonth() + 1)%>/<%= people[0].date_missing.getDate()%>/<%= people[0].date_missing.getFullYear()%>">
                <br><br>
                <label for="age_at_missing">Age Missing:</label>
                <input type="text" id="age_at_missing" name="age_at_missing" value="<%= people[0].age_at_missing %>">
                <br><br>
                <label for="city">City:</label>
                <input type="text" id="city" name="city" value="<%= people[0].city %>">
                <br><br>
                <label for="state">State:</label>
                <input type="text" id="state" name="state" value="<%= people[0].state %>">
                <br><br>
                <label for="gender">Gender:</label>
                <input type="text" id="gender" name="gender" value="<%= people[0].gender %>">
                <br><br>
                <label for="race">Race:</label>
                <input type="text" id="race" name="race" value="<%= people[0].race %>">
                <br><br>
                <button type="submit">Save</button>
          </fieldset>
        </form>

